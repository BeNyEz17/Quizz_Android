<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2"
    tools:context=".SecondActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-69dp"
        tools:layout_editor_absoluteY="28dp">

        <RadioButton
            android:id="@+id/rps1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reponse 1"
            android:translationX="40sp"
            android:translationY="200sp" />

        <RadioButton
            android:id="@+id/rps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reponse 2"
            android:translationX="40sp"
            android:translationY="220sp" />

        <RadioButton
            android:id="@+id/rps3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reponse 3"
            android:translationX="40sp"
            android:translationY="240sp" />

        <RadioButton
            android:id="@+id/rps4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reponse 4"
            android:translationX="40sp"
            android:translationY="260sp" />

        <Button
            android:id="@+id/nxtQuestion"
            android:layout_width="174dp"
            android:layout_height="67dp"
            android:background="#4DFFFFFF"
            android:text="Next Question"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationX="94sp"
            android:translationY="412sp"
            app:iconTint="#FFFFFF" />

    </RadioGroup>

    <TextView
        android:id="@+id/QuestionNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question : 1/n"
        android:textAlignment="textEnd"
        android:textColor="#F4F4F4"
        android:textSize="20sp"
        android:translationX="-12sp"
        android:translationY="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="333dp"
        android:layout_height="59dp"
        android:text="Question : "
        android:textColor="@color/white"
        android:textSize="17sp"
        android:translationX="20sp"
        android:translationY="118sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textAlignment="textEnd"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        android:translationX="-55sp"
        android:translationY="50sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niveau 2"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        android:translationX="20dp"
        android:translationY="20sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>