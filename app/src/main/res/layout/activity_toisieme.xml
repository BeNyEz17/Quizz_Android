<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToisiemeActivity"
    android:background="@drawable/logo3">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="725dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="5dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/Textscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:translationX="125sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="77dp" />

        <TextView
            android:id="@+id/scoreResultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:translationX="145sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="114dp" />

        <Button
            android:id="@+id/changelvl"
            android:layout_width="173dp"
            android:layout_height="83dp"
            android:background="#4DFFFFFF"
            android:text="Changer de niveaux"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:translationX="95sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>